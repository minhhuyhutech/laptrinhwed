@model caominhhuy.Models.Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="bg-light p-4 rounded shadow">
        <h2 class="text-primary mb-4">@Model.Name</h2>

        <div class="row">
            <div class="col-md-6 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded border" style="max-height: 300px; object-fit: contain;" />
                }
                else
                {
                    <img src="/images/no-image.png" alt="No Image" class="img-fluid rounded border" style="max-height: 300px; object-fit: contain;" />
                }
            </div>

            <div class="col-md-6">
                <h4 class="mb-3">Giá: <span class="text-success">@Model.Price.ToString("N0") đ</span></h4>
                <h5>Mô tả:</h5>
                <p class="fs-5">@Model.Description ?? "Không có mô tả cho sản phẩm này."</p>

                <a asp-action="Index" class="btn btn-primary mt-4">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
