@model IEnumerable<caominhhuy.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary mb-4">Danh sách sản phẩm</h2>

<!-- Nút Thêm sản phẩm mới -->
<a asp-area="Admin" asp-controller="Product" asp-action="Add" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle me-1"></i> Thêm sản phẩm mới
</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Không có sản phẩm nào.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>Tên</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th>Danh mục</th>
                <th style="width:200px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("N0") đ</td>
                    <td>@(product.Description?.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</td>
                    <td>@product.Category?.Name</td>
                    <td class="text-center">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <form asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
