@model caominhhuy.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Tên danh mục</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>

        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
