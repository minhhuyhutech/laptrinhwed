@model IEnumerable<caominhhuy.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3 text-primary">@ViewData["Title"]</h2>

<a asp-area="Admin" asp-controller="Categories" asp-action="Add" class="btn btn-success mb-3 d-inline-flex align-items-center">
    <i class="bi bi-plus-circle me-1"></i> Thêm danh mục mới
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">Hiện chưa có danh mục nào.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th style="width: 5%">ID</th>
                <th>Tên danh mục</th>
                <th style="width: 220px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td class="text-center">@category.Id</td>
                    <td>@category.Name</td>
                    <td class="text-center">
                        <a asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Display"
                           asp-route-id="@category.Id"
                           class="btn btn-info btn-sm me-1 d-inline-flex align-items-center">
                            <i class="bi bi-eye me-1"></i> Xem
                        </a>

                        <a asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Update"
                           asp-route-id="@category.Id"
                           class="btn btn-warning btn-sm me-1 d-inline-flex align-items-center">
                            <i class="bi bi-pencil-square me-1"></i> Sửa
                        </a>

                        <a asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Delete"
                           asp-route-id="@category.Id"
                           class="btn btn-danger btn-sm d-inline-flex align-items-center"
                           onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                            <i class="bi bi-trash me-1"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
